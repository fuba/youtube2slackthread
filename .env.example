# YouTube2SlackThread Environment Variables
# Copy this file to .env and fill in your values

# === Required ===
# Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Slack Signing Secret (from Slack App settings)
SLACK_SIGNING_SECRET=your-signing-secret-here

# Encryption key for user cookies/settings
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
COOKIE_ENCRYPTION_KEY=your-secure-encryption-key-here

# === Optional ===
# Slack App Token for Socket Mode (starts with xapp-)
# Required for file uploads via DM
SLACK_APP_TOKEN=xapp-1-your-app-token-here

# Default Slack channel for notifications
SLACK_DEFAULT_CHANNEL=general

# Web UI Base URL (for generating access links)
# Set this to your public URL if running behind a reverse proxy
WEB_UI_BASE_URL=http://localhost:42390
